@model IEnumerable<Example.StudentsManagement.Models.Student>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @if (User.HasPermissionIn(new string[] { AppPermissions.MANAGE_STUDENT_PROFILE }))
    {
        <span>
            @Html.ActionLink("Create New", "Create")
        </span>
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EnrollmentDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnrollmentDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @if (User.HasPermissionIn(new string[] { AppPermissions.MANAGE_STUDENT_PROFILE }))
                {
                    <span>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    </span>
                }
                @if (User.HasPermissionIn(new string[] { AppPermissions.MANAGE_STUDENT_PROFILE, AppPermissions.VIEW_STUDENT_PROFILES }))
                {
                    <span>
                        @Html.ActionLink("Details", "Details", new { studentId = item.Id }) |
                    </span>
                }
                @if (User.HasPermissionIn(new string[] { AppPermissions.MANAGE_STUDENT_PROFILE }))
                {
                    <span>
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </span>
                }
            </td>
        </tr>
    }

</table>
